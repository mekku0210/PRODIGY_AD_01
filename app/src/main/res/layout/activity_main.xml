<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/calculatorBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Display -->
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="48sp"
        android:padding="16dp"
        android:gravity="end"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_alignParentTop="true" />

    <!-- Buttons Grid -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvResult"
        android:columnCount="4"
        android:rowCount="5"
        android:padding="8dp"
        android:alignmentMode="alignMargins"
        android:rowOrderPreserved="false">

        <!-- Row 1 -->
        <Button android:id="@+id/btnClear" android:text="C" style="@style/CalculatorButton" android:backgroundTint="@color/deleteButtonColor"/>
        <Button android:id="@+id/btnDelete" android:text="DEL" style="@style/CalculatorButton" android:backgroundTint="@color/deleteButtonColor"/>
        <Button android:id="@+id/btnPercent" android:text="%" style="@style/CalculatorButton" android:backgroundTint="@color/operatorButtonColor"/>
        <Button android:id="@+id/btnDivide" android:text="/" style="@style/CalculatorButton" android:backgroundTint="@color/operatorButtonColor"/>

        <!-- Row 2 -->
        <Button android:id="@+id/btn7" android:text="7" style="@style/CalculatorButton" android:backgroundTint="@color/numberButtonColor"/>
        <Button android:id="@+id/btn8" android:text="8" style="@style/CalculatorButton" android:backgroundTint="@color/numberButtonColor"/>
        <Button android:id="@+id/btn9" android:text="9" style="@style/CalculatorButton" android:backgroundTint="@color/numberButtonColor"/>
        <Button android:id="@+id/btnMultiply" android:text="*" style="@style/CalculatorButton" android:backgroundTint="@color/operatorButtonColor"/>

        <!-- Row 3 -->
        <Button android:id="@+id/btn4" android:text="4" style="@style/CalculatorButton" android:backgroundTint="@color/numberButtonColor"/>
        <Button android:id="@+id/btn5" android:text="5" style="@style/CalculatorButton" android:backgroundTint="@color/numberButtonColor"/>
        <Button android:id="@+id/btn6" android:text="6" style="@style/CalculatorButton" android:backgroundTint="@color/numberButtonColor"/>
        <Button android:id="@+id/btnMinus" android:text="-" style="@style/CalculatorButton" android:backgroundTint="@color/operatorButtonColor"/>

        <!-- Row 4 -->
        <Button android:id="@+id/btn1" android:text="1" style="@style/CalculatorButton" android:backgroundTint="@color/numberButtonColor"/>
        <Button android:id="@+id/btn2" android:text="2" style="@style/CalculatorButton" android:backgroundTint="@color/numberButtonColor"/>
        <Button android:id="@+id/btn3" android:text="3" style="@style/CalculatorButton" android:backgroundTint="@color/numberButtonColor"/>
        <Button android:id="@+id/btnPlus" android:text="+" style="@style/CalculatorButton" android:backgroundTint="@color/operatorButtonColor"/>

        <!-- Row 5 -->
        <Button android:id="@+id/btn00" android:text="00" style="@style/CalculatorButton" android:backgroundTint="@color/numberButtonColor"/>
        <Button android:id="@+id/btn0" android:text="0" style="@style/CalculatorButton" android:backgroundTint="@color/numberButtonColor"/>
        <Button android:id="@+id/btnDot" android:text="." style="@style/CalculatorButton" android:backgroundTint="@color/numberButtonColor"/>
        <Button android:id="@+id/btnEquals" android:text="=" style="@style/CalculatorButton" android:backgroundTint="@color/equalsButtonColor"/>

    </GridLayout>

</RelativeLayout>
